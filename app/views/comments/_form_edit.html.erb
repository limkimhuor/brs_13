<%= form_for @comment do |f| %>
  <div class="form-group">
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.text_area :comment, rows: 5, class: "form-control" %>
    </div>
      <%= f.submit t("buttons.update"), class: "btn btn-primary" %>
  </div>
<% end %>
