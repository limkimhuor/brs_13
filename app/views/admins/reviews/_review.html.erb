<ul class="container-fluid">
  <div class="col-md-2"><%= gravatar_for review.user %></div>
  <div class="col-md-8">
    <span class="user"><%= link_to review.user.name, [:admins, review.user] %></span></br>
    <span class="content"><%= review.review %></span></br>
    <span class="timestamp">
      Posted <%= time_ago_in_words(review.created_at) %> ago.
    </span></br>
    <p><%= link_to t("menus.comment"), admins_review_path(review) %></p>
  </div>
</ul>
